<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxWidth="Infinity" spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.MainController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <Button maxWidth="Infinity" onAction="#loadFiles" text="Load files" />
    <Label text="Extractors:" />
    <ListView fx:id="listView" maxWidth="Infinity" VBox.vgrow="ALWAYS" />
    <GridPane hgap="10" vgap="10">
        <Label text="Metric:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <ComboBox fx:id="metricComboBox" promptText="Choose metric" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Measure:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <ComboBox fx:id="measureComboBox" disable="true" promptText="Choose measure" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Shortest gram:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="shortestGramTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Longest gram:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="longestGramTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="Number of neighbors:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="numberOfNeighborsTextField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <Label text="First x% is teach part:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <Slider majorTickUnit="20.0" minorTickCount="1" snapToTicks="true" showTickLabels="true" showTickMarks="true"
                min="10" max="90" GridPane.columnIndex="1" GridPane.rowIndex="6" fx:id="teachPartSizeSlider"/>
    </GridPane>
    <Button fx:id="startProcessButton" disable="true" maxWidth="Infinity" onAction="#process" text="Start processing" />
</VBox>
