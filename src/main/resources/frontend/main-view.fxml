<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.MainController"
      spacing="10" maxWidth="Infinity">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>
    <Button onAction="#loadFiles" text="Load files" maxWidth="Infinity"/>
    <ListView fx:id="listView" VBox.vgrow="ALWAYS" maxWidth="Infinity"/>
    <Button onAction="#process" text="Start processing" maxWidth="Infinity"/>
</VBox>
