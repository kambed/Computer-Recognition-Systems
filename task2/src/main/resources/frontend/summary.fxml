<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.CheckBoxTableCell?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<?import javafx.util.converter.BooleanStringConverter?>
<VBox spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.SummaryController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <TableView fx:id="table" editable="true" pickOnBounds="false" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="selectColumn" prefWidth="25" minWidth="25" maxWidth="25">
                <cellValueFactory>
                    <PropertyValueFactory property="selected"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="summaryColumn" sortable="false" text="Summary"/>
            <TableColumn fx:id="t1Column" text="T1"/>
            <TableColumn fx:id="t2Column" text="T2"/>
            <TableColumn fx:id="t3Column" text="T3"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>
